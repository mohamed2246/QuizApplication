<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.ResultGrade"
    android:layoutDirection="rtl"
    >

    <LinearLayout
        android:id="@+id/linear_edietText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/editetextlayout"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/studentNameResultGrde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الطالب"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />




        <TextView
            android:id="@+id/studentGardeResultGrde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="درجة الطالب"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/btn_studentGardeResultGrde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/editecheckbtn"
            android:textColor="@color/white"
            android:text="تم"
            android:textSize="16dp"

            />
    </LinearLayout>



</LinearLayout>