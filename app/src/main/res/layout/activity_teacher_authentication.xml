<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".Teacher.TeacherAuthentication"


    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أضافة امتحان"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FF3700B3"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/linear_edietText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/editetextlayout"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tech_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/editetextlayout"
                    android:hint="اسم المدرس ؟"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="24dp"
                    android:textColor="@color/blue"
                    />

                <EditText
                    android:id="@+id/tech_num"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/editetextlayout"
                    android:hint="رقم المعلم ؟"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="24dp"
                    android:textColor="@color/blue"
                    />

                <EditText
                    android:id="@+id/sub_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/editetextlayout"
                    android:hint="اسم المادة ؟"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="24dp"
                    android:textColor="@color/blue"
                    />

                <EditText
                    android:id="@+id/exam_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/editetextlayout"
                    android:hint="كود الامتحان ؟"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="24dp"
                    android:textColor="@color/blue"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_create_exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_edietText"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/editecheckbtn"
                android:text="أنشاء امتحان"
                android:textSize="20dp"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </ScrollView>


</LinearLayout>